<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="?attr/colorPrimary">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_to"
        android:textColor="?attr/colorText"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="@string/meme_storre"
        android:textColor="?attr/colorText"
        android:textSize="40sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/buttonCustomerLogIn"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal|center"
            android:layout_margin="20dp"
            android:background="?attr/colorAccent"
            android:text="@string/customer_login" />

        <Button
            android:id="@+id/buttonEmployeeLogIn"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal|center"
            android:layout_margin="20dp"
            android:background="?attr/colorAccent"
            android:text="@string/employee_login" />
        <Button
            android:id="@+id/buttonAdminLogIn"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal|center"
            android:layout_margin="20dp"
            android:background="?attr/colorAccent"
            android:text="@string/admin_login" />

        <Switch
            android:id="@+id/themeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffff01"
            android:text="@string/meme_mode" />
    </LinearLayout>

</LinearLayout>