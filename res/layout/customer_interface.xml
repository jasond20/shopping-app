<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary">



    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="@string/welcome_customer"
        android:textColor="?attr/colorText"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/buttonAddItems"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_margin="10dp"
            android:background="?attr/colorAccent"
            android:text="@string/add_item" />

        <Button
            android:id="@+id/buttonRemoveItems"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_margin="10dp"
            android:background="?attr/colorAccent"
            android:text="@string/remove_item" />
        <Button
            android:id="@+id/buttonViewItems"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_margin="10dp"
            android:background="?attr/colorAccent"
            android:text="@string/view_items" />
        <Button
            android:id="@+id/buttonCheckTotalPrice"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_margin="10dp"
            android:background="?attr/colorAccent"
            android:text="@string/check_total_price" />

        <Button
            android:id="@+id/buttonRestorePreviousCart"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_margin="10dp"
            android:background="?attr/colorAccent"
            android:text="@string/restore_previous_cart" />
        <Button
            android:id="@+id/buttonCheckOut"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_margin="10dp"
            android:background="?attr/colorAccent"
            android:text="@string/check_out" />

        <Button
            android:id="@+id/buttonExitSaveCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/log_out_save" />

        <Button
            android:id="@+id/buttonExitCustomerInterface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/log_out" />
    </LinearLayout>


</LinearLayout>